input {
    keyboard {
        xkb {
            layout "br"
            options "lv3:caps_switch_capslock_with_ctrl,ctrl:nocaps"
        }
    }

    touchpad {
        tap
        natural-scroll
    }

    warp-mouse-to-focus
    focus-follows-mouse max-scroll-amount="33%"
}

output "VGA-1" {
    position x=-1366 y=0
}

layout {
    background-color "transparent"
    gaps ::niri.gaps::
    center-focused-column "on-overflow"

    preset-column-widths {
        proportion 0.33333
        proportion 0.5
        proportion 0.66667
    }

    preset-window-heights {
        proportion 0.25
        proportion 0.5
        proportion 1.0
    }

    default-column-width { proportion 0.5; }

    focus-ring { off; }

    border {
        width ::niri.border.width or 0::

        active-color "::niri.border.color_active::"
        inactive-color "::niri.border.color_inactive::"
    }

    tab-indicator {
        position "::niri.tab_indicator.pos or "top"::"

        active-color "::scheme.hex8::77"

        width ::niri.tab_indicator.width or 4::
        length total-proportion=::string.format("%f", niri.tab_indicator.len)::

        gaps-between-tabs ::niri.tab_indicator.gap::
    }
}

::
table.concat(
    imap(niri.startup, function(cmd)
        return "spawn-sh-at-startup \"" .. cmd .. "\""
    end),
    "\n"
)
::

prefer-no-csd

screenshot-path "~/files/pictures/screenshots/screenshot-%Y.%m.%d %H:%M:%S.png"

animations {
    // off
    // slowdown 3.0
}

overview {
    workspace-shadow {
        off
    }
}

// Open the Firefox picture-in-picture player as floating by default
window-rule {
    match app-id=r#"firefox$"# title="^Picture-in-Picture$"
    open-floating true
}

// Place swww in the backdrop
layer-rule {
    match namespace="^swww-daemon$"
    place-within-backdrop true
}

binds {
    Mod+Q               { spawn-sh "GTK_IM_MODULE=simple ::apps.term::"; }
    Mod+R               { spawn-sh "cd ::path::; bin/launch"; }
    Mod+MouseMiddle     { spawn-sh "cd ::path::; bin/launch"; }
    Mod+C  repeat=false { close-window; }
    Mod5+E repeat=false { toggle-overview; }


    XF86AudioRaiseVolume allow-when-locked=true { spawn-sh "wpctl set-volume @DEFAULT_AUDIO_SINK@ 0.1+"; }
    XF86AudioLowerVolume allow-when-locked=true { spawn-sh "wpctl set-volume @DEFAULT_AUDIO_SINK@ 0.1-"; }
    XF86AudioMute        allow-when-locked=true { spawn-sh "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle"; }
    XF86AudioMicMute     allow-when-locked=true { spawn-sh "wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle"; }
    Mod+XF86AudioRaiseVolume allow-when-locked=true { spawn-sh "wpctl set-volume @DEFAULT_AUDIO_SINK@ 0.025+"; }
    Mod+XF86AudioLowerVolume allow-when-locked=true { spawn-sh "wpctl set-volume @DEFAULT_AUDIO_SINK@ 0.025-"; }

    XF86AudioPlay allow-when-locked=true { spawn-sh "playerctl play-pause"; }
    XF86AudioStop allow-when-locked=true { spawn-sh "playerctl stop"; }
    XF86AudioPrev allow-when-locked=true { spawn-sh "playerctl previous"; }
    XF86AudioNext allow-when-locked=true { spawn-sh "playerctl next"; }
    
    Mod+F10 allow-when-locked=true { spawn-sh "playerctl play-pause"; }
    Mod+F11 allow-when-locked=true { spawn-sh "playerctl previous"; }
    Mod+F12 allow-when-locked=true { spawn-sh "playerctl next"; }

    Mod+W    { focus-window-or-workspace-up; }
    Mod+A  { focus-column-or-monitor-left; }
    Mod+S  { focus-window-or-workspace-down; }
    Mod+D { focus-column-or-monitor-right; }

    Mod5+W    { move-window-up-or-to-workspace-up; }
    Mod5+A  { move-column-left-or-to-monitor-left; }
    Mod5+S  { move-window-down-or-to-workspace-down; }
    Mod5+D { move-column-right-or-to-monitor-right; }

    Mod+Home { focus-column-first; }
    Mod+End  { focus-column-last; }
    Mod5+Home { move-column-to-first; }
    Mod5+End  { move-column-to-last; }

    Mod+Page_Down      { focus-workspace-down; }
    Mod+Page_Up        { focus-workspace-up; }
    Mod5+Page_Down { move-column-to-workspace-down; }
    Mod5+Page_Up   { move-column-to-workspace-up; }
    Mod+Shift+Page_Down { move-workspace-down; }
    Mod+Shift+Page_Up   { move-workspace-up; }

    Mod+WheelScrollDown  cooldown-ms=150 { focus-workspace-down; }
    Mod+WheelScrollUp    cooldown-ms=150 { focus-workspace-up; }
    Mod5+WheelScrollDown cooldown-ms=150 { move-column-to-workspace-down; }
    Mod5+WheelScrollUp   cooldown-ms=150 { move-column-to-workspace-up; }

    Mod+Shift+WheelScrollDown  { focus-column-or-monitor-right; }
    Mod+Shift+WheelScrollUp   { focus-column-or-monitor-left; }
    Mod5+Shift+WheelScrollDown { move-column-right-or-to-monitor-right; }
    Mod5+Shift+WheelScrollUp  { move-column-left-or-to-monitor-left; }

    Mod+1 { focus-workspace 1; }
    Mod+2 { focus-workspace 2; }
    Mod+3 { focus-workspace 3; }
    Mod+4 { focus-workspace 4; }
    Mod+5 { focus-workspace 5; }
    Mod+6 { focus-workspace 6; }
    Mod+7 { focus-workspace 7; }
    Mod+8 { focus-workspace 8; }
    Mod+9 { focus-workspace 9; }
    Mod5+1 { move-column-to-workspace 1; }
    Mod5+2 { move-column-to-workspace 2; }
    Mod5+3 { move-column-to-workspace 3; }
    Mod5+4 { move-column-to-workspace 4; }
    Mod5+5 { move-column-to-workspace 5; }
    Mod5+6 { move-column-to-workspace 6; }
    Mod5+7 { move-column-to-workspace 7; }
    Mod5+8 { move-column-to-workspace 8; }
    Mod5+9 { move-column-to-workspace 9; }

    Mod+BracketLeft  { consume-or-expel-window-left; }
    Mod+BracketRight { consume-or-expel-window-right; }

    Mod5+R { switch-preset-column-width; }
    Mod5+Shift+R { switch-preset-window-height; }
    Mod+F { maximize-column; }
    Mod+Shift+F { fullscreen-window; }
    Mod5+F { expand-column-to-available-width; }

    Mod+Minus { set-column-width "-10%"; }
    Mod+Equal { set-column-width "+10%"; }

    Mod+Shift+Minus { set-window-height "-10%"; }
    Mod+Shift+Equal { set-window-height "+10%"; }

    Mod+Space   { toggle-window-floating; }
    Mod+Shift+Space { switch-focus-between-floating-and-tiling; }

    // Toggle tabbed column display mode.
    // Windows in this column will appear as vertical tabs,
    // rather than stacked on top of each other.
    Mod+T { toggle-column-tabbed-display; }

    Print { screenshot; }
    Ctrl+Print { screenshot-screen; }
    Alt+Print { screenshot-window; }

    Mod+Escape allow-inhibiting=false { toggle-keyboard-shortcuts-inhibit; }

    Mod+Shift+E { quit; }
    Mod5+Shift+E { spawn-sh "swaylock"; }

    Mod+Shift+P { power-off-monitors; }
}
