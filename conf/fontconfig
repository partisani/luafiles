        <test name="family" qual="any">
            <string>sans-serif</string>
        </test>
        <edit mode="assign" name="family" binding="same">
            <string>::font.sans_serif::</string>
        </edit>
    </match>
    <match target="pattern">
        <test name="family" qual="any">
            <string>serif</string>
        </test>
        <edit mode="assign" name="family" binding="same">
            <string>::font.serif::</string>
        </edit>
    </match>
    <match target="pattern">
        <test name="family" qual="any">
            <string>monospace</string>
        </test>
        <edit mode="assign" name="family" binding="same">
            <string>::font.mono::</string>
        </edit>
    </match>
</fontconfig>
